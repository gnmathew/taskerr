<div class="d-flex justify-content-center align-content-center">
  <%= form_with(model: model, local: true, method: method, url: url, class: 'needs-validation') do |form| %>
    <% if @task.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @task.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_field :description, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :status, class: 'form-label' %>
      <%= form.select :status, Task.statuses.keys.map { |status| [status.humanize, status] }, {}, class: 'form-select' %>
    </div>

    <%= form.submit 'Submit', class: 'btn btn-primary' %>

    <%= link_to 'Dashboard', root_path, class: 'btn btn-dark' %>
  <% end %>
</div>
